     \\/     M anipulation  |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Solver application to use
application     simpleFoam;

// Start time control
startFrom       startTime;
startTime       0;

// End time control
stopAt          endTime;
endTime         1000;

// Time step size
deltaT          1;

// Write control settings
writeControl    timeStep;
writeInterval   100;
purgeWrite      0;

// Write format and precision
writeFormat     ascii;
writePrecision  6;
writeCompression off;

// Time format
timeFormat      general;
timePrecision   6;

// Runtime modification
runTimeModifiable yes;

// Function objects for post-processing
functions
{
    forces
    {
        type            forces;
        libs            ("libforces.so");
        patches         (wall);
        rhoInf          1.0;
        CofR            (0 0 0);
        writeControl    timeStep;
        writeInterval   10;
    }

    residuals
    {
        type            solverInfo;
        libs            ("libutilityFunctionObjects.so");
        fields          (U p);
        writeResidualFields false;
    }
}

// ************************************************************************* //
