FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    inlet
    {
        // Atmospheric boundary layer turbulent kinetic energy profile
        type            atmBoundaryLayerInletK;
        
        flowDir         (1 0 0);
        zDir            (0 0 1);
        Uref            10.0;
        Zref            20.0;
        z0              uniform 0.1;
        d               uniform 0.0;
        
        // Curve-fitting coefficients for YGCJ profiles
        // C1=0.0, C2=1.0 gives Richards-Hoxey expressions
        C1              0.0;
        C2              1.0;
        
        kappa           0.41;
        Cmu             0.09;
        initABL         true;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform 0.1;
        value           uniform 0.1;
    }

    ground
    {
        type            kqRWallFunction;
        value           uniform 0.1;
    }

    top
    {
        type            slip;
    }

    sides
    {
        type            symmetry;
    }
}

// ************************************************************************* //
